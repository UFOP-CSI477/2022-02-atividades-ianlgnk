// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Estado {
  id        Int      @id @default(autoincrement())
  nome      String
  sigla     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Cidade    Cidade[]
}

model Cidade {
  id          Int      @id @default(autoincrement())
  nome        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Estado      Estado   @relation(fields: [idEstado], references: [id])
  idEstado    Int
  Pessoa      Pessoa[]
  Unidade     Unidade[]
  LocalColeta LocalColeta[]
}

model TipoSanguineo {
  id        Int      @id @default(autoincrement())
  tipo      String
  fator     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Pessoa    Pessoa[]
}

model Pessoa {
  id              Int           @id @default(autoincrement())
  nome            String
  rua             String
  numero          String
  complemento     String
  documento       String         
  Cidade          Cidade        @relation(fields: [idCidade], references: [id])
  idCidade        Int
  tipoSanguineo   TipoSanguineo @relation(fields: [idTipoSanguineo], references: [id])
  idTipoSanguineo Int
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  Doacao          Doacao[]
}

model Unidade {
  id            Int       @id @default(autoincrement())
  nome          String
  numero        String
  complemento   String
  Cidade        Cidade    @relation(fields: [idCidade], references: [id])
  idCidade      Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  Distribuicao  Distribuicao[]
}

model Distribuicao {
  id          Int      @id @default(autoincrement())
  data        DateTime
  Unidade     Unidade  @relation(fields: [idUnidade], references: [id])
  idUnidade   Int
  Produto     Produto  @relation(fields: [idProduto], references: [id])
  idProduto   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Produto {
  id            Int @id @default(autoincrement())
  etiqueta      String
  validade      DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  Doacao        Doacao @relation(fields: [idDoacao], references: [id])
  idDoacao      Int
  Distribuicao  Distribuicao[]
}

model Doacao {
  id        Int @id @default(autoincrement())
  Pessoa    Pessoa @relation(fields: [idPessoa], references: [id])
  idPessoa  Int
  localId   Int
  data      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Produto   Produto[]
}

model LocalColeta {
  id          Int @id @default(autoincrement())
  nome        String
  rua         String
  numero      String
  complemento String
  Cidade      Cidade @relation(fields: [idCidade], references: [id])
  idCidade    Int
}